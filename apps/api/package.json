{
  "name": "@simvex/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "migrate": "tsx scripts/migrate.ts",
    "migrate:validate": "tsx scripts/validate-migrations.ts",
    "db:smoke": "tsx scripts/db-smoke.ts",
    "test": "npm run test:unit && npm run test:postgres",
    "test:unit": "tsx --test src/core/catalog.test.ts src/core/repository.test.ts src/modules/api-contract.test.ts",
    "test:postgres": "tsx --test src/core/repository-postgres.test.ts",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "echo \"no lint yet\""
  },
  "dependencies": {
    "@simvex/shared": "0.1.0",
    "fastify": "^5.0.0",
    "@fastify/cors": "^10.0.0",
    "@fastify/multipart": "^9.0.0",
    "pg": "^8.16.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/pg": "^8.15.6",
    "@types/node": "^22.10.0",
    "tsx": "^4.20.0",
    "typescript": "^5.7.0"
  }
}
